@model ArabicProject.Models.AdEntree

<style>
    .smallInput {
   width: 400px !important;
   height:300px;
}
    .tableWidth{
        width: 200px !important;
    }
</style>


<h4>Enter the information here: </h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="CreateAd">
            <table class="table m-2">
                <tr>
                    <th class="tableWidth"> </th>
                    <th class="tableWidth"> </th>
                </tr>
                <tbody>
                    <tr>
                        <td class="tableWidth"></td><td>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                @*<label asp-for="TypeOfAd" class="control-label">Select Section:</label>*@
                                <select asp-for="TypeOfAd"
                                        asp-items="@(new SelectList(@ViewBag.AdTypes,"Id","Name"))">
                                    <option> Select..</option>
                                </select>

                                <span asp-validation-for="TypeOfAd" class="text-danger"></span>
                            </div>
                        </td></tr>
                        <tr><td> Title : </td>
                        <td>
                            <div class="form-group">
                                @*<label asp-for="Title" class="control-label"></label>*@
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td> Body Comments: 
                        </td>
                        <td>
                            <div class="form-group">
                                @*<label asp-for="BodyComments" class="control-label"> Opinion </label>*@
                                <textarea asp-for="BodyComments" rows="10" cols="50" class="form-control smallInput" ></textarea>
                                <span asp-validation-for="BodyComments" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>Author: </td>
                        <td>
                            <div class="form-group">
                                @*<label asp-for="Author" class="control-label"></label>*@
                                <input asp-for="Author" class="form-control" />
                                <span asp-validation-for="Author" class="text-danger"></span>
                            </div>

                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table> </form>
    
        
    </div>
</div>


